# Environment variables template for Universal Stochastic Predictor
# Copy this file to .env and fill in with real credentials
# NEVER commit .env to version control

# ==================== Market Data API ====================
# API credentials for market feed providers
# See: doc/Predictor_Estocastico_IO.tex ยง2.2 - Credential Injection Pattern

# Example: Binance API
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Example: Other market data providers
MARKET_FEED_API_KEY=your_key_here
MARKET_FEED_API_SECRET=your_secret_here

# ==================== Database ====================
DATABASE_URL=postgresql://user:password@localhost:5432/stochastic_predictor
DATABASE_PASSWORD=secure_password_here

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FILE=/var/log/stochastic_predictor/app.log

# ==================== JAX Configuration ====================
JAX_PLATFORMS=cpu
JAX_DEFAULT_DTYPE=float32

# ==================== Application Settings ====================
ENVIRONMENT=development
DEBUG=false
