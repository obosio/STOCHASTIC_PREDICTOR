{
  "files.exclude": {
    "**/.*": true,
    "**/__pycache__": true,
    "**/*.egg-info": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "build": true,
    "dist": true,
    "*.egg-info": true
  },
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.include": [
    "stochastic_predictor",
    "tests"
  ],
  "python.analysis.exclude": [
    "**/.*",
    "**/node_modules/**",
    "**/__pycache__/**",
    "**/.venv/**",
    "**/doc/**",
    "**/examples/**"
  ],
  "[latex]": {
    "editor.formatOnSave": false
  },
  "chat.tools.terminal.autoApprove": {
    ".venv/bin/isort": true,
    ".venv/bin/mypy": true,
    ".venv/bin/flake8": true
  }
}
